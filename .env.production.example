# =============================================================================
# Relay - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=relay
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=relay

# For external database (e.g., AWS RDS)
# DATABASE_URL=postgresql://user:password@hostname:5432/relay?schema=public

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# CORS - set to your frontend domain
CORS_ORIGIN=https://admin.yourapp.com

# -----------------------------------------------------------------------------
# Security Secrets (REQUIRED - generate with: openssl rand -hex 32)
# -----------------------------------------------------------------------------
API_KEY_SECRET=your-32-char-secret-here-min-length
WEBHOOK_SIGNING_SECRET=another-32-char-secret-for-webhooks

# -----------------------------------------------------------------------------
# Stripe
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# -----------------------------------------------------------------------------
# Redis (optional - defaults to redis://redis:6379 in docker-compose)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# Admin UI
# -----------------------------------------------------------------------------
ADMIN_UI_PORT=3001
API_URL=http://localhost:3000
