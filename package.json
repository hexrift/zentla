{
  "name": "zentla",
  "version": "5.13.0",
  "private": true,
  "description": "Open source entitlements, metering, and billingâ€”without the lock-in",
  "author": "Hexrift",
  "license": "MIT",
  "homepage": "https://zentla.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/hexrift/zentla.git"
  },
  "bugs": {
    "url": "https://github.com/hexrift/zentla/issues"
  },
  "keywords": [
    "billing",
    "entitlements",
    "metering",
    "usage-based-billing",
    "subscription",
    "saas",
    "stripe",
    "zuora",
    "revenue-analytics",
    "checkout"
  ],
  "workspaces": [
    "packages/*",
    "packages/adapters/*"
  ],
  "scripts": {
    "version:sync": "node scripts/sync-version.js",
    "version:patch": "npm version patch --no-git-tag-version && yarn version:sync",
    "version:minor": "npm version minor --no-git-tag-version && yarn version:sync",
    "version:major": "npm version major --no-git-tag-version && yarn version:sync",
    "build": "yarn workspaces foreach -A -t run build",
    "dev": "yarn workspace @zentla/api dev",
    "dev:ui": "yarn workspace @zentla/admin-ui dev",
    "dev:web": "yarn workspace @zentla/web dev",
    "dev:stripe": "stripe listen --forward-to localhost:3002/api/v1/webhooks/stripe",
    "dev:all": "concurrently \"yarn dev\" \"yarn dev:ui\" \"yarn dev:web\"",
    "start": "yarn workspace @zentla/api start:prod",
    "typecheck": "yarn workspaces foreach -A -t run build && yarn tsc --noEmit -p packages/api/tsconfig.json",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspaces foreach -A run lint",
    "db:generate": "yarn workspace @zentla/database generate",
    "db:migrate": "yarn workspace @zentla/database migrate",
    "db:migrate:deploy": "yarn workspace @zentla/database migrate:deploy",
    "db:push": "yarn workspace @zentla/database push",
    "db:seed": "yarn workspace @zentla/database seed",
    "db:studio": "yarn workspace @zentla/database studio",
    "clean": "yarn workspaces foreach -p run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "yarn install && yarn docker:up && yarn db:generate && yarn db:migrate && yarn db:seed"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "resolutions": {
    "qs": "^6.14.1"
  }
}
